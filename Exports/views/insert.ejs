  }

  input:valid {
    border: 2px solid black;
  }
</style>

<head>
  <meta charset="utf-8">
  <title></title>
</head>
<h1>Insert Docpacs</h1>

<body>
  <form action="/insert" method="post">
    Date:
    <input type="text" name="date" required maxlength="5">
    <br>
    <br>
    Goals:
    <input type="text" name="goals" value="">
    <br>
    <br>
    Changes:
    <input type="text" name="changes" value="">
    <br>
    <br>
    Events:
    <br>
    <br>
    Event Date: <input type="text" name="event" value="">
    <br>
    Type:  <input type="text" name="event_type" value="">
    <br>
    Text:  <input type="text" name="event_text" value="">
    <br>
    <br>
    Included Documentation:
    <br>
    <br>
